[alias]
  st = status
  s  = status -s
  co = checkout
  ci = commit
  bl = branch -a
  br = branch
  cp = cherry-pick
	lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --all

[user]
  name = Jostein Gogstad
  email = jostein.gogstad@avinor.no

[apply]
  # Detect whitespace errors when applying a patch
  whitespace = fix

[color]
  diff = auto
  status = auto
  branch = auto
  grep = auto

[log]
  ui = auto
  decorate = full

[format]
	pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[core]
  # Use cat as default pager (not less)
  pager = cat

  editor = vim

  # Don't convert to CRLF on checkout, but force LF on commit if CRLF is encountered
	autocrlf = input

  # Global ignore file
  excludesfile = ~/.gitignore_global

  # Treat spaces before tabs and all kinds of trailing whitespace as an error
  # [default] trailing-space: looks for spaces at the end of a line
  # [default] space-before-tab: looks for spaces before tabs at the beginning of a line
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[help]
  # Automatically correct and execute mistyped commands
  autocorrect = 1

[push]
  # Make git push push relevant annotated tags when pushing branches out
  followTags = true
	default = current

[pull]
  # Always rebase on pull, never merge
	rebase = true

[url "https://github.com/"]
	insteadOf = git://github.com/
[http]
	proxy = proxy.lv.no:80
	sslVerify = false
